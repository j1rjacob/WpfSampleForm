<Window x:Class="WpfAppForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppForm"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Full Name"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="5"/>
        <TextBox Grid.Column="1"
                 Width="250"
                 Height="20"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Bottom"
                 Margin="5"/>
        <TextBlock Text="Sex"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="5"
                   Grid.Row="1"/>
        <StackPanel Orientation="Horizontal" 
                    Grid.Row="1" 
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
            <RadioButton GroupName="Sex" 
                         Content="Male"
                         Margin="5"
                         IsChecked="True"/>
            <RadioButton GroupName="Sex" 
                         Content="Female"
                         Margin="5"/>
        </StackPanel>
        <TextBlock Text="Do you own"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="5"
                   Grid.Row="2"/>
        <StackPanel Orientation="Horizontal" 
                    Grid.Row="2" 
                    Grid.Column="2" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom">
            <CheckBox Content="Desktop"
                      Margin="5"/>
            <CheckBox Content="Laptop"
                      Margin="5"/>
            <CheckBox Content="Tablet"
                      Margin="5"/>
        </StackPanel>
        <TextBlock Text="Your job"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="5"
                       Grid.Row="3"/>
        <ComboBox Grid.Row="3"
                      Grid.Column="1"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Bottom"
                      Margin="5">
            <ComboBoxItem Content="Programmer"/>
            <ComboBoxItem Content="Designer"/>
            <ComboBoxItem Content="Manager"/>
            <ComboBoxItem Content="CTO"/>
            <ComboBoxItem Content="CEO"/>
        </ComboBox>
        <TextBlock Text="Promised Delivery Date"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="5"
                   Grid.Row="4"/>
        <Calendar Grid.Row="4"
                  Grid.Column="1"
                  Margin="5"/>
    </Grid>
</Window>
